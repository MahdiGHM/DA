<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.decoder.hamedpa.fastedittext.FView
        android:id="@+id/editText_insert"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/textView"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="33dp"
        android:text="میزان قند خون :"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/editText_insert"
        android:text="mg/dl"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/editText_insert" />

    <Spinner
        android:id="@+id/spinner_update"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/textView4"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="38dp"
        android:gravity="center_vertical"
        android:text="محدوده زمانی :"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp" />

    </RelativeLayout>

</LinearLayout>