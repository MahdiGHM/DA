<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.decoder.hamedpa.fastedittext.FView
            android:id="@+id/editText2_modified_insulin"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1_modified_insulin"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="13dp"
            android:layout_toStartOf="@+id/textView8"
            android:layout_toLeftOf="@+id/textView8"
            android:ems="10"
            android:inputType="number" />

        <com.decoder.hamedpa.fastedittext.FView
            android:id="@+id/editText3_modified_insulin"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2_modified_insulin"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="13dp"
            android:layout_toStartOf="@+id/textView9"
            android:layout_toLeftOf="@+id/textView9"
            android:ems="10"
            android:inputType="number" />

        <com.decoder.hamedpa.fastedittext.FView
            android:id="@+id/editText1_modified_insulin"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_toStartOf="@+id/textView7"
            android:layout_toLeftOf="@+id/textView7"
            android:ems="10"
            android:inputType="number" />

        <info.hoang8f.widget.FButton
            android:id="@+id/button_modified_insulin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="محاسبه"
            android:textColor="@color/mdtp_white"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView_modified_insulin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:text="مجموع انسولین دریافتی :"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="10dp"
            android:text="قند خون فعلی :"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="10dp"
            android:text="قند خون هدف :"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
</LinearLayout>