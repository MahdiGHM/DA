<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText2_modified_insulin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1_modified_insulin"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textView8"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText3_modified_insulin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2_modified_insulin"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textView9"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText1_modified_insulin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textView7"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button_modified_insulin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:text="محاسبه" />

    <TextView
        android:id="@+id/textView_modified_insulin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="10dp"
        android:text="مجموع انسولین دریافتی :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="10dp"
        android:text="قند خون فعلی :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="10dp"
        android:text="قند خون هدف :"
        android:textSize="18sp" />
</RelativeLayout>